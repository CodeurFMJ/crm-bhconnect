FROM php:8.1-cli

# Installer les dépendances
RUN apt-get update && apt-get install -y \
    git \
    curl \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    libpq-dev \
    zip \
    unzip \
    && rm -rf /var/lib/apt/lists/*

# Installer les extensions PHP
RUN docker-php-ext-install pdo pdo_pgsql mbstring exif pcntl bcmath gd

# Installer Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Définir le répertoire de travail
WORKDIR /app

# Copier les fichiers
COPY . .

# Installer les dépendances
RUN composer install --optimize-autoloader --no-dev

# Créer un fichier .env minimal
RUN echo 'APP_NAME="CRM BhConnect"\nAPP_ENV=production\nAPP_DEBUG=false\nAPP_KEY=base64:nintAOiQ9tDe04cC9p4pQRu+pUE10YjX8RwjUOpH6wQ=\n\nDB_CONNECTION=pgsql\nDB_HOST=localhost\nDB_PORT=5432\nDB_DATABASE=postgres\nDB_USERNAME=postgres\nDB_PASSWORD=password' > .env

# Commande de démarrage
CMD ["sh", "-c", "php -S 0.0.0.0:$PORT -t public"]
